#:import sm kivy.uix.screenmanager
ScreenManager:
    id: 'manager'
    transition:sm.FadeTransition(duration=.0)
    MDScreen:
        md_bg_color: 245/255, 245/255, 245/255, 1
        name:"ONE"
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(5), dp(5)
            MDToolbar:
                title: "Shoppy Admin"
                elevation: 10


            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(5), dp(5)

        Shops:
            pos_hint:{'center_x': .25, 'center_y':.75}

            MDIcon:
                icon:"cart-arrow-down"
                font_size : 48
                halign:"center"
                theme_text_color: "Custom"
                text_color: 83/225, 186/225, 115/225, 1
            MDLabel:
                text:"ORDERS"
                bold:True
                halign: "center"
                theme_text_color: "Custom"
                text_color: 83/225, 186/225, 115/225, 1
                halign:'center'


        Shops:
