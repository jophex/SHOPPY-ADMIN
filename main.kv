                text_color: 83/225, 186/225, 115/225, 1
            MDLabel:
                text:"PRODUCTS"
                bold:True
                halign: "center"
                theme_text_color: "Custom"
                text_color: 83/225, 186/225, 115/225, 1
                halign:'center'

        Shops:
            pos_hint:{'center_x': .25, 'center_y':.45}

            MDIcon:
                icon:"account-multiple-plus"
